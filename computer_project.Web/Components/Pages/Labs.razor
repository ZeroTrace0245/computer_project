@page "/labs"
@rendermode InteractiveServer

<PageTitle>Labs</PageTitle>

<div class="container py-5">
    <div class="text-center mb-4">
        <span class="badge bg-warning text-dark text-uppercase">Experimental</span>
        <h1 class="display-6 fw-bold mt-2 labs-hero-title">Labs</h1>
        <p class="labs-hero-subtitle">Work in progress. Features here are previews and may change or break.</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="bg-warning bg-opacity-25 text-warning rounded-circle d-flex align-items-center justify-content-center" style="width:40px; height:40px;">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-bold">Experimental Zone</h5>
                            <div class="text-muted small">Use at your own risk. Feedback welcome!</div>
                        </div>
                    </div>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-bold">AI Coach (coming back soon)</div>
                                <div class="small text-muted">Chat-based suggestions will return here with safety checks.</div>
                            </div>
                            <span class="badge bg-secondary">Queued</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-bold">Adaptive Meal Planner</div>
                                <div class="small text-muted">Rotates meal plans based on your recent logs and calories.</div>
                            </div>
                            <span class="badge bg-info text-dark">Planned</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-bold">Hydration Streaks</div>
                                <div class="small text-muted">Daily streaks and reminders to keep water tracking fun.</div>
                            </div>
                            <span class="badge bg-primary">In Design</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-bold">Focused Mode Banner</div>
                                <div class="small text-muted">Quick motivation in the top bar to keep you on track.</div>
                            </div>
                            <span class="badge bg-success">Live</span>
                        </li>
                    </ul>

                    <div class="alert alert-warning mt-4 mb-0" role="alert">
                        <i class="bi bi-gear-wide-connected me-2"></i>
                        Labs is under active construction. Expect rough edges.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
