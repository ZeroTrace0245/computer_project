@page "/"

<PageTitle>SmartBite - Diet & Shopping</PageTitle>

<div class="container text-center mt-5 py-5">
    <h1 class="display-3 fw-bold">SmartBite</h1>
    <p class="lead text-muted mb-5">Automate diet tracking, monitor calories, and manage your shopping list with ease.</p>

    <div class="d-flex justify-content-center gap-3 mb-5">
        <a href="register" class="btn btn-primary btn-lg px-5 shadow">Get Started Free</a>
        <a href="login" class="btn btn-outline-secondary btn-lg px-5">Sign In</a>
    </div>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4 text-start">
                    <h5 class="card-title fw-bold">Meal Logging</h5>
                    <p class="card-text text-muted">Keep track of every meal and monitor your daily calorie intake.</p>
                    <a href="meals" class="btn btn-primary">Start Logging</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4 text-start">
                    <h5 class="card-title fw-bold">Shopping List</h5>
                    <p class="card-text text-muted">Organize your grocery shopping and ensure you never miss an item.</p>
                    <a href="shoppinglist" class="btn btn-primary">Manage List</a>
                </div>
            </div>
        </div>
    </div>
</div>
