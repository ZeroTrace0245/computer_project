@page "/feedback"
@rendermode InteractiveServer

<PageTitle>Support & Feedback</PageTitle>

<ConsumerOnly>
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h1 class="display-6 fw-bold mb-4">Support & Feedback</h1>

            <div class="row g-4 mb-4">
                <div class="col-md-5">
                    <!-- Contact Channels Section -->
                    <div class="card border-0 h-100 shadow-sm mica-effect">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-4">Connect With Us</h5>
                            <div class="d-flex flex-column gap-3">
                                <div class="d-flex align-items-center p-3 border border-white border-opacity-10 rounded-4 bg-white bg-opacity-5">
                                    <div class="bg-primary bg-opacity-10 text-primary p-2 rounded-circle me-3">
                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                                    </div>
                                    <div>
                                        <div class="small text-muted">Phone Number</div>
                                        <div class="fw-bold fs-5 text-dark-glow">+1 (555) 000-1234</div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center p-3 border border-white border-opacity-10 rounded-4 bg-white bg-opacity-5">
                                    <div class="bg-success bg-opacity-10 text-success p-2 rounded-circle me-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16"><path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/></svg>
                                    </div>
                                    <div>
                                        <div class="small text-muted">WhatsApp</div>
                                        <div class="fw-bold fs-5 text-dark-glow">@@SmartBiteHelp</div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center p-3 border border-white border-opacity-10 rounded-4 bg-white bg-opacity-5">
                                    <div class="bg-dark text-white p-2 rounded-circle me-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16"><path d="M12.685 5.806 15.665.5H14.13l-2.613 3.06L9.345.5H4.168l3.128 4.596L4.168 10.5h1.535l2.766-3.237 2.279 3.237h5.177l-3.24-4.764ZM10.22 9.576h-.705L5.783 4.14h.705l3.732 5.436Z"/></svg>
                                    </div>
                                    <div>
                                        <div class="small text-muted">X (Twitter)</div>
                                        <div class="fw-bold fs-5 text-dark-glow">@@SmartBiteApp</div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center p-3 border border-white border-opacity-10 rounded-4 bg-white bg-opacity-5">
                                    <div class="bg-primary text-white p-2 rounded-circle me-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16"><path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/></svg>
                                    </div>
                                    <div>
                                        <div class="small text-muted">Facebook</div>
                                        <div class="fw-bold fs-5 text-dark-glow">SmartBite Official</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="card border-0 h-100 shadow-sm">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-3">Send Us Feedback</h5>
                            <p class="text-muted">We'd love to hear your thoughts on SmartBite. Your feedback helps us improve the experience for everyone.</p>

                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase text-muted">How would you rate your experience?</label>
                                <div class="d-flex gap-3">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        int rating = i;
                                        <button class="btn @(currentRating >= rating ? "btn-primary text-white" : "btn-outline-secondary") rounded-4 p-3 flex-grow-1 transition-all" 
                                                @onclick="() => currentRating = rating">
                                            <div class="d-flex flex-column align-items-center gap-1">
                                                <svg width="24" height="24" viewBox="0 0 24 24" fill="@(currentRating >= rating ? "currentColor" : "none")" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                                                <span class="fw-bold">@rating</span>
                                            </div>
                                        </button>
                                    }
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase text-muted">What can we improve?</label>
                                <textarea class="form-control rounded-4 bg-light border-0 p-3" rows="5" @bind="feedbackText" placeholder="Share your suggestions, bug reports, or feature requests..."></textarea>
                            </div>

                            @if (submitted)
                            {
                                <div class="alert alert-success d-flex align-items-center rounded-4 p-3 border-0 bg-success bg-opacity-10" role="alert">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-success me-3"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                                    <div class="fw-bold text-success">Thank you for your feedback! It has been shared with our team.</div>
                                </div>
                            }
                            else
                            {
                                <div class="text-end">
                                    <button class="btn btn-primary px-5 btn-lg shadow-sm rounded-pill glow-btn fw-bold py-3" @onclick="SubmitFeedback" disabled="@(string.IsNullOrWhiteSpace(feedbackText))">
                                        Submit Feedback
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</ConsumerOnly>

@code {
    private int currentRating = 0;
    private string feedbackText = "";
    private bool submitted = false;

    private void SubmitFeedback()
    {
        // Mock submission
        submitted = true;
    }
}
